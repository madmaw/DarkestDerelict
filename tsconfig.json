{
  "compilerOptions": {
      "module": "amd",
      "target": "ES6",
      "lib": [
        "ES2020",
        "DOM"
      ],
      "outFile": "build/out.js",
      "rootDir": ".",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "strictNullChecks": false
  },
  "include": [
      "src/ts/**/*",
      "src/d.ts/**/*"
  ],
  "exclude": [
      "src/externs/**/*"
  ]
}